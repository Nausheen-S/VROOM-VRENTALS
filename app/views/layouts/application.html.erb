  <% if user_signed_in? %>
  <% if  Customer.where(user_id: current_user.id).any?  %>
  <% @customer = Customer.find_by(user_id: current_user.id)  %>
    <li class="nav-item ">
    <%= link_to 'View My Profile', "/customers/" + @customer.id.to_s , :class => "nav-link" %>   
    </li>
    <% else %>
    <li class="nav-item">
    <%= link_to 'Add My Profile', "/customers/new" , :class => "nav-link" %>
    </li>
    <% end %>
    <%= link_to 'log out', destroy_user_session_url, method: :delete , :class => "nav-link" %>
    <% end %>
    <% if not user_signed_in? %>
      	<li><a class="nav-link" href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up/Log In</a></li>
      <% end %>
  </nav>
    <%= yield %>
  </body>
